.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        = link_to new_group_path, class: "top-items__icons--edit" do
          %i.fas.fa-edit
        = link_to edit_user_path(current_user), class: "top-items__icons--cog" do
          %i.fas.fa-cog

  .side-bar__group-list
    .side-bar__group-list--groups
      - current_user.groups.each do |group|
        .side_bar__group-list--groups--group
          .side-bar__group-list--groups--group--name
            = group.name
          .side-bar__group-list--groups--group--message
